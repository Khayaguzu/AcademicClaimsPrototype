@model IEnumerable<AcademicClaimsPrototype.Models.Claim>

@{
    ViewData["Title"] = "Manage Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Lecturer Claims</h2>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Date</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerEmail</td>
                <td>@claim.Date.ToShortDateString()</td>
                <td>@claim.Description</td>
                <td>@claim.Status</td>
                <td>
                    @if (claim.Status == AcademicClaimsPrototype.Models.ClaimStatus.Pending)
                    {
                        <form asp-action="Approve" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit">Approve</button>
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit">Reject</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
